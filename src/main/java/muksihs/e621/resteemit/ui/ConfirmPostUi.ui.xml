<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui">
	<ui:style>
	
	</ui:style>
	<m:MaterialModal ui:field="modal" fullscreen="false">
		<m:MaterialModalContent>
			<m:MaterialTitle style="margin-top: -50px" title="CONFIRM POST"></m:MaterialTitle>
			<m:MaterialPanel style='margin: 4px; width: auto; text-align: right;'>
				<m:MaterialPanel
					style='text-align: left; margin: 4px; margin-right: 8px; display: inline-block;'>
					<m:MaterialCheckBox ui:field="upvote" text="Upvote Post"
						type="FILLED" />
				</m:MaterialPanel>
				<m:MaterialButton ui:field="btnPost" text="POST" />
				<m:MaterialButton ui:field="btnCancel" text="CANCEL" />
			</m:MaterialPanel>
			<m:MaterialPanel>
				<m:MaterialLabel text="POST TITLE" />
				<m:MaterialInput helperText="POST TITLE" type="TEXT"
					ui:field="title" />
			</m:MaterialPanel>
			<m:MaterialPanel ui:field="tags"></m:MaterialPanel>
			<m:MaterialPanel ui:field="preview"></m:MaterialPanel>
		</m:MaterialModalContent>
	</m:MaterialModal>
</ui:UiBinder> 