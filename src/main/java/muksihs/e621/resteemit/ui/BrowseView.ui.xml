<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:x="urn:import:muksihs.e621.resteemit.ui">
	<ui:style>
	
	</ui:style>
	<m:MaterialPanel>
		<m:MaterialPanel style='text-align: right; margin-top: 2px;' ui:field="menu">
			<m:MaterialPanel
				style='text-align: left; margin: 4px; display: inline-block;'>
				<m:MaterialCheckBox ui:field="ratingSafe" text="Show Safe"
					type="FILLED" />
			</m:MaterialPanel>
			<m:MaterialPanel
				style='text-align: left; margin: 4px; display: inline-block;'>
				<m:MaterialCheckBox ui:field="ratingQuestionable"
					text="Show Questionable" type="FILLED" />
			</m:MaterialPanel>
			<m:MaterialPanel
				style='text-align: left; margin: 4px; display: inline-block;'>
				<m:MaterialCheckBox ui:field="ratingExplicit"
					text="Show Explicit" type="FILLED" />
			</m:MaterialPanel>
			<m:MaterialButton ui:field="loadFilter" style='margin: 2px;'
				text="Load Filter"/>
				<m:MaterialButton ui:field="saveFilter" style='margin: 2px;'
				text="Save Filter"/>
			<m:MaterialButton ui:field="clearSearch" style='margin: 2px;'
				text="Clear Search"/>
			<m:MaterialButton ui:field="mostRecent" style='margin: 2px;'
				text="Most Recent"/>
			<m:MaterialButton ui:field="previous" style='margin: 2px;'
				text="Previous"/>
			<m:MaterialButton ui:field="next" style='margin: 2px;'
				text="Next"/>
		</m:MaterialPanel>
		<m:MaterialPanel style="text-align: center; margin-bottom: 4px;" ui:field="posts"/>
		
		<m:MaterialPanel style='text-align: right; padding-top: 4px;' ui:field="menuBtm">
			<m:MaterialButton ui:field="previousBtm" style='margin: 2px;'
				text="Previous"/>
			<m:MaterialButton ui:field="nextBtm" style='margin: 2px;'
				text="Next"/>
		</m:MaterialPanel>
		
		<m:MaterialCollapsible ui:field="tags">
			<m:MaterialCollapsibleItem>
				<m:MaterialCollapsibleHeader>
					<m:MaterialLink text="Active Tag Filters" iconType="POLYMER"
						iconPosition="LEFT" textColor="BLACK" />
				</m:MaterialCollapsibleHeader>
				<m:MaterialCollapsibleBody>
					<m:MaterialPanel ui:field="filterTags"></m:MaterialPanel>
				</m:MaterialCollapsibleBody>
			</m:MaterialCollapsibleItem>
			<m:MaterialCollapsibleItem>
				<m:MaterialCollapsibleHeader>
					<m:MaterialLink text="Available Tag Filters"
						iconType="POLYMER" iconPosition="LEFT" textColor="BLACK" />
				</m:MaterialCollapsibleHeader>
				<m:MaterialCollapsibleBody>
					<m:MaterialPanel ui:field="availableTags"></m:MaterialPanel>
				</m:MaterialCollapsibleBody>
			</m:MaterialCollapsibleItem>
		</m:MaterialCollapsible>
	</m:MaterialPanel>
</ui:UiBinder> 